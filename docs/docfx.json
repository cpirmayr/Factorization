{
  "metadata": [
    {
      "src": [
        {
          "files": [ "../*.csproj" ],
          "exclude": [ "**/obj/**", "**/bin/**" ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "api/**.yml", "api/toc.yml" ]
      },
      {
        "files": [ "*.md", "toc.yml" ]
      }
    ],
    "dest": "_site",
    "template": [ "default", "modern" ]
  }
}